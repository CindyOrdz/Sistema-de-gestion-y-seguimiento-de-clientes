@inherits ComponenteTab

@if(display)
{
    <div class="modal fade show" tabindex="-2" style="display:block; background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mensaje</h5>
                    <button type="button" class="btn-close" @onclick="Dispose"></button>
                </div>
                <div class="modal-body">
                    <p class="justify-content-center">@Mensaje</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" @onclick="Dispose">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    public String Mensaje { get; set; }


}
