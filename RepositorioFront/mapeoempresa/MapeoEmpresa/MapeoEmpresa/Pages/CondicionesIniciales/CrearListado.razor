@inject ParteService ParteService;
@using EntidadesNegocio.EntidadesDto;
@using EntidadesNegocio.Terceros;
@using System.Numerics;
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UsuarioService usuarioService

<!-- Formulario para crear el listado  -->

<div class="col-lg-9 contact-form__wrapper p-4 order-lg-1 border border-3 formDesign">
    <EditForm Model="CondicionInicialDTO" OnValidSubmit="GuardarCondicionOperativaInicial">
        <DataAnnotationsValidator />
        <div class="row">
            <br />
            <h4>Listado de condiciones operativas iniciales</h4>

            <div class="col-sm-12 mb-3">
                <div class="form-group">
                    <label class="required-field" for="parte">Parte: </label>
                    <input type="text" class="form-control" id="parte" value="@ParteService.ParteDTOSeleccionada.NombreElemento" disabled>
                </div>
            </div>
                    
            <div class="col-sm-12 mb-3">
                <div class="form-group">
                    <label for="descripcion">Descripcion</label>
                    <textarea class="form-control" rows="3" id="descripcion" @bind="CondicionInicialDTO.descripcion" required></textarea>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>

        </div>
    </EditForm>
</div>

<div class="pt-4">
    <div class="p-4 contenedor-bloque">
        <h4>Listado de condiciones operativas iniciales</h4>
        @if (ListaCondicionesIniciales == null)
        {
            <p>Cargando...</p>
        }
        else if (ListaCondicionesIniciales.Count == 0)
        {
            <p class="pt-3">No se han registrado condiciones iniciales para la parte seleccionada</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Descripcion</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in ListaCondicionesIniciales)
                    {
                        <tr>
                            <td>@p.id</td>
                            <td>@p.descripcion</td>
                            <td><button class="btn btn-primary" @onclick="() => AbrirModalEditar(p)"><i class="oi oi-pencil"></i></button></td>
                            <td><button class="btn btn-danger" @onclick="() => AbrirModalBorrar(p.id)"><i class="oi oi-x"></i></button></td>
                            <td><buton class="btn btn-info" @onclick="() => AbrirModalInformacion(p)"><i class="oi oi-info"></i></buton></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        @if (modalEliminar)
        {
            <div class="modal" tabindex="-1" style="display:block">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Confirmar eliminación</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick=CerrarModal></button>
                        </div>
                        <div class="modal-body">
                            <p>¿Desea eliminar el listado de condiciones iniciales con ID @ID?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal" @onclick=CerrarModal>Cancelar</button>
                            <button type="button" class="btn btn-success" @onclick=BorrarCondicionInicial>Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (modalEditar)
        {
            <div class="modal" tabindex="-1" style="display:block">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Actualización de datos</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick=CerrarModal></button>
                        </div>
                        <div class="modal-body">
                            <h5><strong>Condicion inicial con ID @condicionInicialDTOModal.id</strong></h5>

                            <EditForm Model="condicionInicialDTOModal">
                                <DataAnnotationsValidator />
                                <div class="form-group">
                                    <label for="descripcion">Descripción: </label>
                                    <textarea class="form-control" id="descripcion" name="descripcion" rows="5" @bind="condicionInicialDTOModal.descripcion"></textarea>
                                </div>


                                <br /> <button type="submit" class="btn btn-primary" @onclick=Guardar>Editar condicion inicial</button>
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" @onclick=CerrarModal>Cancelar</button>

                            </EditForm>

                        </div>

                    </div>
                </div>
            </div>
        }

        @if (modalInformacion)
        {
            <div class="modal" tabindex="-1" style="display:block">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Información registrada</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick=CerrarModal></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-4 mb-3">
                                    <div class="form-group">
                                        <label for="nombre">ID: </label>
                                        <input type="text" class="form-control" id="id" value="@condicionInicialDTOModal.id" readonly>
                                    </div>
                                </div>

                                <div class="col-sm-8 mb-3">
                                    <div class="form-group">
                                        <label for="parte">Parte: </label>
                                        <input type="text" class="form-control" id="parte" value="@ParteService.ParteDTOSeleccionada.NombreElemento" readonly>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="responsable">Responsable: </label>
                                <input type="text" class="form-control" id="responsable" value="@condicionInicialDTOModal.nombreResponsable" readonly>
                            </div>

                            <div class="form-group">
                                <label for="descripcion">Descripción: </label>
                                <textarea class="form-control" id="descripcion" rows="5" value="@condicionInicialDTOModal.descripcion" readonly />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }


    </div>
</div>

<br />

<ModalPersonalizado @ref="modalRegistroExitoso" />

@code {
    private ModalPersonalizado modalRegistroExitoso;
    private long idResponsable = 0;
    private bool rolEmpleado = false;

    //DTO para capturar informacion de formulario
    CondicionInicialDTO CondicionInicialDTO = new CondicionInicialDTO();
    List<CondicionInicialDTO> ListaCondicionesIniciales;
    private bool modalEliminar = false;
    private bool modalEditar = false;
    private bool modalInformacion = false;
    private BigInteger ID = 0;

    CondicionInicialDTO condicionInicialDTOModal = new CondicionInicialDTO();

    protected async Task GuardarCondicionOperativaInicial()
    {
        CondicionInicialDTO.idResponsable = idResponsable;
        await ParteService.AdicionarCondicionInicial(CondicionInicialDTO);

        //Limpiar form
        CondicionInicialDTO = new CondicionInicialDTO();

        modalRegistroExitoso.Mostrar("El registro se realizo correctamente");
        ListaCondicionesIniciales = ParteService.ListarCondicionesIniciales();
    }

    protected override void OnInitialized()
    {
        var authenticationState = AuthenticationStateProvider.GetAuthenticationStateAsync();
        var usuario = authenticationState.Result.User.Identity.Name;
        rolEmpleado = authenticationState.Result.User.IsInRole("EMPLEADO");

        if (rolEmpleado)
        {
            idResponsable = usuarioService.ObtenerIdentificacionEmpresaPorUsuario(usuario); //Obtiene id empleado logueado
        }

        ListaCondicionesIniciales = ParteService.ListarCondicionesIniciales();
    }

    private void CerrarModal()
    {
        modalEliminar = false;
        modalEditar = false;
        modalInformacion = false;
    }

    protected async Task BorrarCondicionInicial()
    {
        await ParteService.BorrarCondicionInicial(ID);
        modalEliminar = false;
        ListaCondicionesIniciales = ParteService.ListarCondicionesIniciales();
    }

    private void AbrirModalBorrar(BigInteger id)
    {
        modalEliminar = true;
        ID = id;
    }


    private void AbrirModalEditar(CondicionInicialDTO condicionInicial)
    {
        modalEditar = true;
        condicionInicialDTOModal = condicionInicial;
    }

    protected async Task Guardar()
    {
        await ParteService.EditarCondicionInicial(condicionInicialDTOModal);
        modalEditar = false;
        ListaCondicionesIniciales = ParteService.ListarCondicionesIniciales();
    }

    private void AbrirModalInformacion(CondicionInicialDTO condicionInicial)
    {
        modalInformacion = true;
        condicionInicialDTOModal = condicionInicial;
    }
}
