@page "/pagplanta"
@attribute [Authorize(Roles = "EMPRESA,EMPLEADO", Policy = "PoliticaDefinirEmpresa")]

@using System.Numerics;
@using EntidadesNegocio.EntidadesDto;
@inject PlantaService PlantaService;
@inject AreaService AreaService;
@inject SedeService SedeService;
@inject NavigationManager NavigationManager


<PageTitle>Plantas</PageTitle>
<div class="flex-container">
    <button class="btn" @onclick="Retroceder">
        <i class="fas fa-circle-chevron-left"></i>
    </button>
    <h1><b>Plantas</b></h1>
</div>

<div class="col-lg-9 contact-form__wrapper">
    <div class="row">
        <div class="input-group mb-3">
            <span class="input-group-text input-title">Empresa</span>
            <input type="text" class="form-control custom-input" id="empresa" value="@SedeService.EmpresaSeleccionada.RazonSocial" readonly>
            <span class="input-group-text input-title">Sede</span>
            <input type="text" class="form-control custom-input" id="sede" value="@SedeService.SedeSeleccionada.Id" readonly>
        </div>

        <div>
            <div class="input-group mb-3">
                <input type="search" class="form-control custom-input" id="busqueda" @bind="IdBusqueda" placeholder="Búsqueda por Id">
                <button class="btn btn-sm btn-secondary" type="button" @onclick="() => BuscarPlanta(IdBusqueda)">
                    <i class="oi oi-magnifying-glass"></i>
                </button>
            </div>
        </div>
    </div>
    <div>
        @if (AlertaBusqueda)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error: </strong> Por favor ingresa un ID válido.
            </div>
        }
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Informacion encontrada</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @if (planta != null)
                        {
                            <strong>ID: </strong> @planta.id <br />
                            <strong>Nombre: </strong> @planta.nombre <br />
                            <button type="button" class="btn btn-primary my-2" @onclick="() => AsociarArea(planta)">Asociar área</button>
                        }
                        else
                        {
                            <p>No se ha encontrado información</p>
                        }
                    </td>

                </tr>

            </tbody>
        </table>
    </div>
</div>

<br />
<div>
    @foreach (var item in types)
    {
        if (Array.IndexOf(types, item) == selected)
        {
            <button class="btn btn-secondary">@item.Name</button>
        }
        else
        {
            <button class="btn btn-outline-secondary" @onclick="() => selected = Array.IndexOf(types, item)">@item.Name</button>
        }
    }
</div>
@GetRenderFragment(types[selected])

@code {
    private string IdBusqueda;
    PlantaEmpresaClienteDTO planta;
    private bool AlertaBusqueda = false;

    int selected;
    ComponentBase[] components = { new CrearPlanta(), new Listado() };
    Type[] types => components.Select(c => c.GetType()).ToArray();

    RenderFragment GetRenderFragment(Type type)
    {
        RenderFragment renderFragment = renderTreeBuilder =>
        {
            renderTreeBuilder.OpenComponent(0, type);
            renderTreeBuilder.CloseComponent();
        };
        return renderFragment;
    }

    private void AsociarArea(PlantaEmpresaClienteDTO Planta)
    {
        PlantaService.PlantaSeleccionada = Planta;
        AreaService.ComponenteAnterior = null;
        NavigationManager.NavigateTo("/pagarea");
    }

    protected async Task BuscarPlanta(string id)
    {
        if (BigInteger.TryParse(id, out BigInteger idFinal))
        {
            AlertaBusqueda = false;
            planta = await SedeService.BuscarPlantas(idFinal); 
        }
        else
        {
            AlertaBusqueda = true;
        }
        
    }

    private void Retroceder()
    {
        if (PlantaService.ComponenteAnterior!= null && PlantaService.ComponenteAnterior.Equals("mapaProcesos"))
        {
            NavigationManager.NavigateTo("/mapadeprocesos");
        }
        else
        {
            NavigationManager.NavigateTo("/empresa");
        }

    }
}
