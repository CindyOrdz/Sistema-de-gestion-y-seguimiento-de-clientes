@page "/pagcomponente"
@attribute [Authorize(Roles = "EMPRESA,EMPLEADO", Policy = "PoliticaDefinirEmpresa")]

@using System.Numerics;
@inject NavigationManager NavigationManager
@using EntidadesNegocio.EntidadesDto;
@inject AreaService AreaService;
@inject EquipoService EquipoService;
@inject ComponenteService ComponenteService;

<PageTitle>Componentes</PageTitle>
<div class="flex-container">
    <button class="btn" @onclick="Retroceder">
        <i class="fas fa-circle-chevron-left"></i>
    </button>
    <h1><b>Componentes</b></h1>
</div>


<div class="col-lg-9 contact-form__wrapper">
    <div class="row">
        <div class="input-group mb-3">
            <span class="input-group-text input-title">ID Área</span>
            <input type="number" value="@AreaService.AreaSeleccionada.id" class="form-control custom-input" id="id" readonly>
            <span class="input-group-text input-title">Nombre</span>
            <input type="text" value="@AreaService.AreaSeleccionada.nombre" class="form-control custom-input" id="contacto" readonly>
        </div>

        <div>
            <div class="input-group mb-3">
                <input type="search" class="form-control custom-input" id="busqueda" @bind="IdBusqueda"  placeholder="Búsqueda por Id">
                <button class="btn btn-sm btn-secondary" type="button" @onclick="() => BuscarComponente(IdBusqueda)" >
                    <i class="oi oi-magnifying-glass"></i>
                </button>
            </div>
        </div>
    </div>
    <div>
        @if (AlertaBusqueda)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error: </strong> Por favor ingresa un ID válido.
            </div>
        }
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Informacion encontrada</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @if (componente != null)
                        {
                            <strong>ID: </strong> @componente.id <br />
                            <strong>Nombre: </strong> @componente.nombre <br />
                            <button type="button" class="btn btn-primary my-2" @onclick="() => AsociarEquipo(componente)">Asociar equipo</button>
                        }else{
                            <p>No se ha encontrado información</p>
                        }

                    </td>

                </tr>

            </tbody>
        </table>
    </div>
</div>
<br />
<div>
    @foreach (var item in types)
    {
        if (Array.IndexOf(types, item) == selected)
        {
            <button class="btn btn-secondary">@item.Name</button>
        }
        else
        {
            <button class="btn btn-outline-secondary" @onclick="() => selected = Array.IndexOf(types, item)">@item.Name</button>
        }
    }
</div>
@GetRenderFragment(types[selected])

@code {
    private string IdBusqueda;
    ComponenteDTO componente;
    private bool AlertaBusqueda = false;

    int selected;
    ComponentBase[] components = { new CrearComponente(), new Listado() };
    Type[] types => components.Select(c => c.GetType()).ToArray();

    RenderFragment GetRenderFragment(Type type)
    {
        RenderFragment renderFragment = renderTreeBuilder =>
        {
            renderTreeBuilder.OpenComponent(0, type);
            renderTreeBuilder.CloseComponent();
        };
        return renderFragment;
    }

    protected async Task BuscarComponente(string id)
    {
        if (BigInteger.TryParse(id, out BigInteger idFinal))
        {
            AlertaBusqueda = false;
            componente = await AreaService.BuscarComponente(idFinal);
        }
        else
        {
            AlertaBusqueda = true;
        }

    }

    private void AsociarEquipo(ComponenteDTO componente)
    {
        ComponenteService.ComponenteSeleccionado = componente;
        EquipoService.ComponenteAnterior = null;
        NavigationManager.NavigateTo("/pagequipo");
    }


    private void Retroceder()
    {
        if (ComponenteService.ComponenteAnterior != null && ComponenteService.ComponenteAnterior.Equals("mapaProcesos"))
        {
            NavigationManager.NavigateTo("/mapadeprocesos");
        }
        else
        {
            NavigationManager.NavigateTo("/pagarea");
        }

    }
}
