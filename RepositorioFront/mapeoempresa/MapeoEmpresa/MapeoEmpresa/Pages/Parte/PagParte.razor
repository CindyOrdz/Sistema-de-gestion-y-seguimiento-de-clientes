@page "/pagparte"
@attribute [Authorize(Roles = "EMPRESA,EMPLEADO", Policy = "PoliticaDefinirEmpresa")]

@using System.Numerics;
@using EntidadesNegocio.EntidadesDto;
@inject EquipoService EquipoService;
@inject ParteService ParteService;
@inject CondicionOperativaInicialService CondicionOperativaInicialService;
@inject NavigationManager NavigationManager

<PageTitle>Partes</PageTitle>
<div class="flex-container">
    <button class="btn" @onclick="Retroceder">
        <i class="fas fa-circle-chevron-left"></i>
    </button>
    <h1><b>Partes</b></h1>
</div>

<div class="col-lg-9 contact-form__wrapper">
    <div class="row">
        <div class="input-group mb-3">
            <span class="input-group-text input-title">ID Equipo</span>
            <input type="number" value="@EquipoService.EquipoDTOSeleccionado.id"  class="form-control custom-input" id="id" readonly>
            <span class="input-group-text input-title">Nombre</span>
            <input type="text" value="@EquipoService.EquipoDTOSeleccionado.nombre"  class="form-control custom-input" id="nombre" readonly>
        </div> 
    </div>
    
    <div>
        <div class="input-group mb-3">
            <input type="search" class="form-control custom-input" id="busqueda" @bind="IdBusqueda" placeholder="Búsqueda por Id">
            <button class="btn btn-sm btn-secondary" type="button" @onclick="() => BuscarEquipo(IdBusqueda)">
                <i class="oi oi-magnifying-glass"></i>
            </button>
        </div>
    </div>

    <div>
        @if (AlertaBusqueda)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error: </strong> Por favor ingresa un ID válido.
            </div>
        }
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Informacion encontrada</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @if (parte != null)
                        {
                            <strong>ID: </strong> @parte.Id <br />
                            <strong>Nombre: </strong> @parte.NombreElemento <br />
                            <button type="button" class="btn btn-primary my-2" @onclick="() => GestionarCondiciones(parte)">Condiciones operativas</button>
                        }
                        else
                        {
                            <p>No se ha encontrado información</p>
                        }
                    </td>

                </tr>

            </tbody>
        </table>
    </div>
</div>

<br />
<div>
    @foreach (var item in types)
    {
        if (Array.IndexOf(types, item) == selected)
        {
            <button class="btn btn-secondary">@item.Name</button>
        }
        else
        {
            <button class="btn btn-outline-secondary" @onclick="() => selected = Array.IndexOf(types, item)">@item.Name</button>
        }
    }
</div>
@GetRenderFragment(types[selected])

@code {
    private string IdBusqueda;
    private bool AlertaBusqueda = false;
    ParteDTO parte;

    int selected;
    ComponentBase[] components = { new CrearParte(),new Listado()};
    Type[] types => components.Select(c => c.GetType()).ToArray();

    RenderFragment GetRenderFragment(Type type)
    {
        RenderFragment renderFragment = renderTreeBuilder =>
        {
            renderTreeBuilder.OpenComponent(0, type);
            renderTreeBuilder.CloseComponent();
        };
        return renderFragment;
    }

    private void CerrarAlerta()
    {
        AlertaBusqueda = false;
    }

    private void Retroceder()
    {
        if (ParteService.ComponenteAnterior != null && ParteService.ComponenteAnterior.Equals("mapaProcesos"))
        {
            NavigationManager.NavigateTo("/mapadeprocesos");
        }
        else
        {
            NavigationManager.NavigateTo("/pagequipo");
        }

    }

    private void GestionarCondiciones(ParteDTO parte)
    {
        ParteService.ParteDTOSeleccionada = parte;
        CondicionOperativaInicialService.ComponenteAnterior = null;
        NavigationManager.NavigateTo("/pagCondicionesOperativas");
    }

    protected async Task BuscarEquipo(string id)
    {
        if (BigInteger.TryParse(id, out BigInteger idFinal))
        {
            AlertaBusqueda = false;
            parte = await EquipoService.BuscarParte(idFinal);
        }
        else
        {
            AlertaBusqueda = true;
        }

    }
}
